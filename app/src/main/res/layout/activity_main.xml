<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/olive_green"
    >


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age to Minutes"
        android:layout_gravity="center"
        android:textSize="45dp"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:layout_marginTop="70sp"
        />
    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick your date of birth"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textColor="@color/yellow"
        android:layout_marginTop="20sp"
        android:textStyle="italic"
        />

    <Button
        android:id="@+id/PickaDateBtn"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="PICK A DATE"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/olive_green"
        android:backgroundTint="@color/yellow"
        />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your entered date is: "
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textColor="@color/yellow"
        android:layout_marginTop="50sp"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/EnteredDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00/00/0000"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textColor="@color/light_orange"
        android:layout_marginTop="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR AGE TO MINUTES IS:  "
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textColor="@color/yellow"
        android:layout_marginTop="50sp"
        android:textStyle="italic"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="30sp"
            android:text="12345678"
            android:textColor="@color/light_orange"
            android:textSize="60dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="minutes"
            android:layout_gravity="bottom"
            />

    </LinearLayout>





</LinearLayout>